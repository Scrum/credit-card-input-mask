  gem "dotenv"
  # The sauce gem uses driver.within_frame which
  # is deprecayed in v2.8.0, so we pin to 2.7.1
  gem "capybara", "2.7.1"
  gem "sauce"
  gem "sauce-connect"
  gem "selenium-webdriver"
  gem "rspec"
  gem "parallel_tests"
  gem "rspec-retry"
end
